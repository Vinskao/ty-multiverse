---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Hero from "../../components/Hero.astro";
import FightComponent from "../../components/Fight.astro";
import "../../styles/palais.css";

const url = new URL(Astro.request.url);
const username = url.searchParams.get('username');
const token = url.searchParams.get('token');

const isLoggedIn = !!username && !!token;
if (!isLoggedIn) {
  return Astro.redirect(`/tymultiverse/login?redirect=${encodeURIComponent(Astro.url.pathname + Astro.url.search)}`);
}
---
<!DOCTYPE html>
<meta charset="UTF-8" />
<html>
  <head>
    <script async src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script async defer src="https://cdnjs.cloudflare.com/ajax/libs/d3/4.2.2/d3.min.js"></script>
  </head>
  <body>
    <BaseLayout title="Palais 模組1 | Wavo Yuropha" description="Fight module within Palais">
      <div class="stack gap-20">
        <main class="wrapper stack gap-8">
          <Hero title="Palais" tagline="Fight Module" align="start" />
          <div class="system-container">
            <FightComponent />
          </div>
        </main>
      </div>
    </BaseLayout>
  </body>
</html> 