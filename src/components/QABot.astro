    // å–å¾—æ‰€æœ‰å¯é¸ bot åç¨±
    private async fetchBotNames() {
      const maxRetries = 3;
      const retryDelay = 2000; // 2ç§’
      
      for (let attempt = 1; attempt <= maxRetries; attempt++) {
        try {
          const apiBase = import.meta.env.PUBLIC_TYMB_URL || '/tymb';
          const resp = await fetch(`${apiBase}/people/names`, {
            method: 'GET',
            credentials: 'include'
          });
          
          if (resp.ok) {
            const names = await resp.json();
            if (Array.isArray(names)) {
              // ç¢ºä¿ Maya åœ¨åˆ—è¡¨å…§
              if (!names.includes('Maya')) names.unshift('Maya');
              this.state.availableBots = names;
              // åˆå§‹åŒ–å¾Œå…ˆéæ¿¾ç„¡å¥åº«çš„
              if (this.messages) this.pruneAvailableBots();
              this.state.currentBotIndex = names.indexOf('Maya');
              console.log('æˆåŠŸç²å–AIå°ˆå“¡åˆ—è¡¨:', this.state.availableBots);
              return; // æˆåŠŸå¾Œç›´æ¥è¿”å›
            }
          } else if (resp.status === 500) {
            console.warn(`API 500éŒ¯èª¤ (å˜—è©¦ ${attempt}/${maxRetries}):`, resp.statusText);
            if (attempt < maxRetries) {
              console.log(`${retryDelay/1000}ç§’å¾Œé‡è©¦...`);
              await new Promise(resolve => setTimeout(resolve, retryDelay));
              continue;
            }
          } else {
            console.warn('APIå›æ‡‰éŒ¯èª¤:', resp.status, resp.statusText);
          }
        } catch (err) {
          console.warn(`ç¶²è·¯éŒ¯èª¤ (å˜—è©¦ ${attempt}/${maxRetries}):`, err);
          if (attempt < maxRetries) {
            console.log(`${retryDelay/1000}ç§’å¾Œé‡è©¦...`);
            await new Promise(resolve => setTimeout(resolve, retryDelay));
            continue;
          }
        }
      }
      
      // æ‰€æœ‰é‡è©¦éƒ½å¤±æ•—å¾Œï¼Œç¢ºä¿è‡³å°‘æœ‰ä¸€å€‹é è¨­çš„AIå¯ç”¨
      console.warn('æ‰€æœ‰é‡è©¦éƒ½å¤±æ•—ï¼Œä½¿ç”¨é è¨­AI');
      if (this.state.availableBots.length === 0) {
        this.state.availableBots = ['Maya'];
        this.state.currentBotIndex = 0;
      }
      this.updateAvatarAndName();
    }

