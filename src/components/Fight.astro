// 使用 Astro 的文件系統 API 獲取所有圖片
const personImages = await Astro.glob('/src/assets/person/*.png');
const characterNames = personImages.map(image => {
  // 從路徑中提取文件名（不含擴展名）
  const path = image.default;
  const fileName = path.split('/').pop()?.replace('.png', '') || '';
  return fileName;
});
